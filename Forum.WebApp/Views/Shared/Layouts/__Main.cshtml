    <script src="~/js/"></script>
    *@


</head>
<header id="mainHeader">
    <div class="h3 d-flex justify-content-center">
        <nav class="navbar navbar-expand-lg">
            <a class="navbar-brand" id="navbarLogoId" @Html.ActionLink("FORUM", "Index", "AppUser")</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon " id="toogleIcon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" @Html.ActionLink("Show Users Data", "Show")</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Log in/Register
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" @Html.ActionLink("SignIn", "Index", "Account")</a>
                            <a class="dropdown-item" @Html.ActionLink("SignUp", "SignUp", "Account")</a>
                            <div class="dropdown-divider"></div>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" @Html.ActionLink("Log out","SignOut", "Account")</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
</header>
<div class="container">

    @RenderBody()


    <!-- dodanie do projektu JQuery -->
    @RenderSection("Scripts", required: false)
</div>