@using Forum.Core.Models.AppUserModels
@using Forum.Domain.Models

@model ShowListModel<CommentToAnswer>

<div class="" id="questions_list_div">
    @{

        <table class="table table-striped">
            <tr>
                <th>Answer Id</th>
                <th>Comment to answer</th>
                <th></th>
            </tr>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.AnswerId</td>
                    <td>@item.CommentToAnswerContent</td>
                    <td>
                        @if (item.AppUserId == Model.CurrentAppUserId)
                        {
                            <span>@Html.ActionLink("Comment", "Add", "CommentToComment", new { commentToCommentId = item.Id }, new {@class = "comment_to_answer_link"})</span>
                            <span>@Html.ActionLink("Update", "Update", "CommentToAnswer", new { id = item.Id }, new {@class = "comment_to_answer_link"})</span>
                            <span>@Html.ActionLink("Show comments", "Show", "CommentToComment", new { commentToAnswerId = item.Id }, new {@class = "comment_to_answer_link"})</span>
                            <span> @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new {@class = "comment_to_answer_link_delete"})</span>
                        }
                        else
                        {
                            <span>@Html.ActionLink("Comment", "Add", "CommentToComment", new { commentToCommentId = item.Id }, new {@class = "comment_to_answer_link"})</span>
                            <span>@Html.ActionLink("Show comments", "Show", "CommentToComment", new { commentToAnswerId = item.Id }, new {@class = "comment_to_answer_link"})</span>
                        }
                    </td>
                </tr>
            }
        </table>
    }
</div>