@using Forum.Core.Models.AppUserModels
@using Forum.Domain
@model ShowListModel<AppUser>



<table class="table table-striped">
    <tr>
        <th>User Id</th>
        <th>User Username</th>
        <th></th>
    </tr>
    @foreach (var item in Model.Data)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Username</td>
            <td>
                @if (item.Id == Model.CurrentAppUserId)
                {
                    <span>@Html.ActionLink("Show details", "Show", "UserProfile", new { id = item.Id }, new {@class = "app_user_link"})</span>
                    <span>@Html.ActionLink("Update user data", "Update", new { id = item.Id }, new {@class = "app_user_link"})</span>
                    <span>@Html.ActionLink("Delete user data", "Delete", "Account", new { id = item.Id }, new {@class = "app_user_link_delete"})</span>
                }
                else
                {
                    <span>@Html.ActionLink("Show details", "Show", "UserProfile", new { id = item.Id }, new {@class = "app_user_link"})</span>
                }
            </td>
        </tr>
    }
</table>
