@using Forum.Core.Models.CommentToAnswer
@{
    ViewData["Title"] = "Coment the answer";
    @model CommentToAnswerAddFM
    Layout = "~/Views/Shared/Layouts/__Main.cshtml";
    <link href="~/css/CommentAnswer.css" rel="stylesheet">
}

<div class="col-12 d-flex justify-content-center" id="comment_the_answer_div">
    <h2 class="comment_the_answer_text">
        Comment the answer
    </h2>
</div>

<div class="form-group">
    <form asp-action="Add" asp-controller="CommentToAnswerController" method="post">
        <label asp-for="CommentToAnswerContent"></label>
        <textarea name="CommentToAnswerContent" class="form-control" rows="25" placeholder="Type your comment" required></textarea>
        <input type="submit" />
    </form>
</div>


