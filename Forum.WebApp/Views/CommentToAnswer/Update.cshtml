@using Forum.Core.Models.CommentToAnswer
@{
    ViewData["Title"] = "Update comment to answer";
    @model UpdateCommentToAnswerFM
    Layout = "~/Views/Shared/Layouts/__Main.cshtml";
    <link href="~/css/UpdateCommentToComment.css" rel="stylesheet">
}

<div class="col-12 d-flex justify-content-center" id="update_comments_to_comment_text_div">
    <h2 class="update_comments_to_comment_text">
        Update Comment to answer
    </h2>
</div>

<div class="form-group">
    <form asp-action="Add" asp-controller="CommentToAnswerController" method="post">
        <label asp-for="CommentToAnswerContent"></label>
        <textarea name="CommentToAnswerContent" class="form-control" rows="25" placeholder="Update Comment to answer" required></textarea>
        <input type="submit"/>
    </form>
</div>