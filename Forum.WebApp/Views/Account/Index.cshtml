@using Forum.WebApp.Models.Account
@{
    ViewData["Title"] = "Log in";
    @model LogInModel;
    Layout = "~/Views/Shared/Layouts/__Main.cshtml";
    <link href="~/css/LogIn.css" rel="stylesheet">
}

<div class="col-12 d-flex justify-content-center" id="SignIn_div">
    <h2 class="SignIn_text">
        SIGN IN
    </h2>
</div>

<div class="form-group">
    <form asp-action="SignIn" asp-controller="AccountController" method="post">
        <label asp-for="SignIn"></label>
        <input name="AccountUserLogin" class="form-control" placeholder="type your username" required />

        <label asp-for="SignIn"></label>
        <input name="AccountUserPassword" class="form-control" placeholder="type your password" type="password" required/>

        <input type="submit" />
    </form>
</div>


